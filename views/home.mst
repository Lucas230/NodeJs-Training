{{>header}}{{!mostrar cabeçalho }}
<h1>Página Home </h1>

<!-- <p>USUÁRIO LOGADO: {{userInfo.name}}</p> -->

{{#posts}}
    <div class="post">
        {{#photo}}
            <img src="/media/{{photo}}"/>
        {{/photo}}
        
        <h3><a href="/post/{{slug}}">{{title}}</a></h3>
        <small>Autor: {{author}}</small>
        
        <p>{{body}}</p>
        {{#user}}
            <a href= "/post/{{slug}}/edit">[ Editar ]</a>
        {{/user}}
    </div>
{{/posts}}